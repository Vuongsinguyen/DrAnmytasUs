# Duplicator backup files
*.daf
*.zip
*_archive.*

# Duplicator installer files
dup-installer/
installer.php

# Log files
*.log
dup-installer-bootlog*
server.log
nohup.out

# Keep documentation files
!*_GUIDE.txt
!*_SUMMARY.txt
!MYSQL_INFO.txt
!QUICK_START.txt
!ERROR_FIXED.txt

# Custom extraction scripts (temporary files)
extract_archive.php
extract_wordpress.php
extract_duparchive.py
full_extract.php
extract_helper.sh
.server.pid

# WordPress files (extracted - be selective)
wp-config.php
wp-content/cache/*
wp-content/backups*/*
wp-content/upgrade/*
wp-content/wflogs/*

# Ignore WordPress plugins (PHP files not needed for static site)
wp-content/plugins/
wp-content/mu-plugins/

# === STATIC SITE OUTPUT (out/) ===
# Allow all static site files for deployment
!out/
!out/**

# Security - Don't commit credentials
ADMIN_LOGIN.txt

# But keep wp-content/uploads/ (images needed for Vercel build)
!wp-content/uploads/
# But ignore large files (videos and original high-res images)
wp-content/uploads/**/*.mp4
wp-content/uploads/**/*.MP4
wp-content/uploads/**/*.mov
wp-content/uploads/**/*.MOV
wp-content/uploads/**/*.avi
wp-content/uploads/**/*.AVI

# Keep theme assets (CSS, JS, fonts) but not PHP files
!wp-content/themes/
wp-content/themes/**/*.php
!wp-content/themes/*/assets/
!wp-content/themes/*/style.css

# Keep wp-includes for static assets only
!wp-includes/
wp-includes/**/*.php
!wp-includes/css/
!wp-includes/js/
!wp-includes/fonts/

# WordPress auto-generated
sitemap.xml
sitemap.xml.gz
wp-sitemap*.xml

# Debug files
debug.log
error_log
php_errors.log

# Database files
*.sql
*.sql.gz

# System files
.DS_Store
Thumbs.db

# IDE files
.vscode/
.idea/
*.swp
*.swo

# Node modules (if any)
node_modules/

# Composer vendor (if any)
vendor/

# Environment files
.env
.env.local
.env.*.local

